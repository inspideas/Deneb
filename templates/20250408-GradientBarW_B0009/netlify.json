{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/inspideas/BarChart/refs/heads/main/20250402deneb-Bar%20Chart%20sales%20Value.csv"
    },
    "width": 350,
    "height": {
      "step": 40
    },
    "background": "transparent",
    "transform": [
      {
        "window": [
          {
            "op": "rank",
            "as": "YearRank"
          }
        ],
        "sort": [
          {
            "field": "Year",
            "order": "descending"
          }
        ],
        "groupby": [
          "Category"
        ]
      },
      {
        "filter": "datum.YearRank <= 1"
      },
      {
        "calculate": "datum.YearRank == 1 ? 'TY' : 'LY'",
        "as": "Type"
      }
    ],
    "encoding": {
      "x": {
        "field": "Sales",
        "type": "quantitative",
        "title": null,
        "axis": {
          "grid": false,
          "ticks": false,
          "domain": false,
          "labels": false
        }
      },
      "y": {
        "field": "Category",
        "type": "ordinal",
        "sort": "-x",
        "title": null,
        "axis": {
          "grid": false,
          "ticks": false,
          "domain": false,
          "labelPadding": 15,
          "labelBaseline": "middle",
          "labelColor": "#485563",
          "labelFont": "helvetica",
          "labelFontSize": 12
        }
      },
      "tooltip": [
        {
          "field": "Year"
        },
        {
          "field": "Category"
        },
        {
          "field": "Sales"
        }
      ]
    },
    "layer": [
      {
        "description": "Bar",
        "mark": {
          "type": "bar",
          "opacity": 1,
          "yOffset": 0,
          "height": {
            "band": 0.5
          },
          "cornerRadius": 13,
          "fill": {
            "x1": 0,
            "y1": 0.8,
            "x2": 1,
            "y2": 1,
            "gradient": "linear",
            "stops": [
              {
                "offset": 0,
                "color": "#f6f6f6"
              },
              {
                "offset": 1,
                "color": "#dfe9f3"
              }
            ]
          }
        },
        "encoding": {
          "x": {
            "field": "Sales",
            "type": "quantitative"
          },
          "y": {
            "field": "Category",
            "type": "ordinal"
          }
        },
        "transform": [
          {
            "filter": "datum.Type == 'TY'"
          }
        ]
      },
      {
        "description": "Text",
        "mark": {
          "type": "text",
          "align": "left",
          "dx": 10,
          "color": "#485563",
          "font": "helvetica",
          "fontSize": 12
        },
        "encoding": {
          "x": {
            "field": "Sales"
          },
          "y": {
            "field": "Category"
          },
          "text": {
            "field": "Sales",
            "type": "quantitative",
            "format": ".2s"
          }
        },
        "transform": [
          {
            "filter": "datum.Type == 'TY'"
          }
        ]
      }
    ],
    "config": {
      "view": {
        "stroke": null
      },
      "axis": {
        "grid": false,
        "ticks": false,
        "domain": true
      }
    }
  }