      "value": 0.01
    },
    {
      "name": "OtherColor",
      "value": "#cccccc"
    },
    {
      "name": "pbiCrossFilterSelection",
      "value": [],
      "on": [
        {
          "events": {
            "source": "scope",
            "type": "mouseup",
            "markname": "data-point"
          },
          "update": "pbiCrossFilterApply(event, \"datum['__0__'] == _{__0__}_\")"
        },
        {
          "events": {
            "source": "view",
            "type": "mouseup",
            "filter": [
              "!event.item || event.item.mark.name != 'data-point'"
            ]
          },
          "update": "pbiCrossFilterClear()"
        }
      ]
    }
  ],
  "data": [
    {
      "name": "dataset"
    },
    {
      "name": "transformed",
      "source": "dataset",
      "transform": [
        {
          "type": "pie",
          "field": "__1__",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": true
        },
        {
          "type": "collect",
          "sort": {
            "field": "__1__",
            "order": "ascending"
          }
        },
        {
          "type": "window",
          "ops": [
            "sum"
          ],
          "fields": [
            "__1__"
          ],
          "as": [
            "totalSum"
          ]
        },
        {
          "type": "formula",
          "as": "cumulativeRatio",
          "expr": "datum['__1__']/ datum.totalSum"
        },
        {
          "type": "window",
          "ops": [
            "rank"
          ],
          "sort": {
            "field": "__1__",
            "order": "descending"
          },
          "as": [
            "rank"
          ]
        },
        {
          "type": "formula",
          "as": "colorIndex",
          "expr": "datum.cumulativeRatio <= topRatioThreshold ? datum.rank - 1 : -1"
        },
        {
          "type": "formula",
          "as": "midAngle",
          "expr": "(((datum.endAngle-datum.startAngle)/2)+datum.startAngle)-PI/2"
        },
        {
          "type": "formula",
          "as": "xmid",
          "expr": "(innerRadius + 20) * cos(datum.midAngle) + width / 2"
        },
        {
          "type": "formula",
          "as": "ymid",
          "expr": "(innerRadius + 20) * sin(datum.midAngle) + height / 2"
        },
        {
          "type": "formula",
          "as": "labelText",
          "expr": "labelField === '0' ? datum['__0__'] : labelField === '1' ? datum['__1__'] : datum['__0__'] + '\\n ' + datum['__1__']"
        }
      ]
    },
    {
      "name": "centerLabel",
      "source": "transformed",
      "transform": [
        {
          "type": "aggregate",
          "fields": [
            "__1__"
          ],
          "ops": [
            "sum"
          ],
          "as": [
            "total"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "highlightColor",
      "type": "ordinal",
      "domain": {
        "data": "transformed",
        "field": "colorIndex"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728",
        "#9467bd",
        "#8c564b"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "transformed"
      },
      "encode": {
        "enter": {
          "fill": {
            "signal": "isValid(scale('highlightColor', datum.colorIndex)) ? scale('highlightColor', datum.colorIndex) : OtherColor"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          },
          "tooltip": {
            "signal": "{Category: datum['__0__'], Value: datum['__1__']}"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          },
          "stroke": {
            "signal": "SeparatorColor"
          },
          "strokeWidth": {
            "signal": "separator"
          },
          "fillOpacity": [
            {
              "test": "datum['__selected__'] == 'on'",
              "value": 1
            },
            {
              "value": 0.3
            }
          ]
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "centerLabel"
      },
      "encode": {
        "enter": {
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          },
          "text": {
            "field": "total"
          },
          "fontSize": {
            "signal": "CenterTextSize"
          },
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "middle"
          },
          "fill": {
            "signal": "CenterTextColor"
          }
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "transformed"
      },
      "encode": {
        "enter": {
          "x": {
            "field": "xmid"
          },
          "y": {
            "field": "ymid"
          },
          "text": {
            "field": "labelText"
          },
          "fill": {
            "signal": "labeltextcolor"
          },
          "fontSize": {
            "signal": "labelFontSize"
          },
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "middle"
          }
        }
      }
    }
  ]
