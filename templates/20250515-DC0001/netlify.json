{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 200,
  "height": 200,
  "background": "#f6f6f6",

  "signals": [
    {"name": "innerRadius", "value": 60, "bind": {"input": "range", "min": 0, "max": 90, "step": 1}},
    {"name": "cornerRadius", "value": 0, "bind": {"input": "range", "min": 0, "max": 10, "step": 0.5}},
    {"name": "separator", "value": 0, "bind": {"input": "range", "min": 0, "max": 10, "step": 0.5}},
    {"name": "SeparatorColor", "value": "#f6f6f6", "bind": {"input": "color"}},
    {"name": "labelOffsetRatio", "value": 2, "bind": {"input": "range", "min": 0, "max": 3, "step": 0.05}},
    {"name": "CenterTextColor", "value": "#3f3f3f", "bind": {"input": "color"}},
    {"name": "CenterTextSize", "value": 9, "bind": {"input": "range", "min": 5, "max": 20, "step": 1}},
    {"name": "labeltextcolor", "value": "#f6f6f6", "bind": {"input": "color"}},
    {"name": "labelFontSize", "value": 9, "bind": {"input": "range", "min": 5, "max": 20, "step": 1}},
    {"name": "topRatioThreshold", "value": 0.95, "bind": {"input": "range", "min": 0.3, "max": 1, "step": 0.01}},
    {"name": "labelField","value": "Category","bind": {"input": "select","options": ["Category", "Total Sales Qty","Both"]}},
    {"name": "startAngle", "value": 6.283},
    {"name": "endAngle", "value": 0},
    {"name": "padAngle", "value": 0.01},
    {"name": "OtherColor", "value": "#cccccc", "bind": {"input": "color"}},
    {
      "name": "pbiCrossFilterSelection",
      "value": [],
      "on": [
        {
          "events": {
            "source": "scope",
            "type": "mouseup",
            "markname": "data-point"
          },
          "update": "pbiCrossFilterApply(event, \"datum['Category'] == _{Category}_\")"
        },
        {
          "events": {
            "source": "view",
            "type": "mouseup",
            "filter": [
              "!event.item || event.item.mark.name != 'data-point'"
            ]
          },
          "update": "pbiCrossFilterClear()"
        }
      ]
    }
    
  ],

"data": [
    {
      "name": "dataset",
      "url": "https://raw.githubusercontent.com/inspideas/BarChart/refs/heads/main/20250513DC.csv",
      "format": {"type": "csv", "parse": "auto"}
    },
      {
      "name": "transformed",
      "source": "dataset",
      "transform": [
        {
          "type": "pie",
          "field": "Total Sales Qty",
          "startAngle": {
            "signal": "startAngle"
          },
          "endAngle": {
            "signal": "endAngle"
          },
          "sort": true
        },
        {
          "type": "collect",
          "sort": {
            "field": "Total Sales Qty",
            "order": "ascending"
          }
        },
        {
          "type": "window",
          "ops": [
            "sum"
          ],
          "fields": [
            "Total Sales Qty"
          ],
          "as": [
            "totalSum"
          ]
        },
        {
          "type": "formula",
          "as": "cumulativeRatio",
          "expr": "datum['Total Sales Qty']/ datum.totalSum"
        },
        {
          "type": "window",
          "ops": [
            "rank"
          ],
          "sort": {
            "field": "Total Sales Qty",
            "order": "descending"
          },
          "as": [
            "rank"
          ]
        },
        {
          "type": "formula",
          "as": "colorIndex",
          "expr": "datum.cumulativeRatio <= topRatioThreshold ? datum.rank - 1 : -1"
        },
        {
          "type": "formula",
          "as": "midAngle",
          "expr": "(((datum.endAngle-datum.startAngle)/2)+datum.startAngle)-PI/2"
        },
        {
          "type": "formula",
          "as": "xmid",
          "expr": "(innerRadius + 20) * cos(datum.midAngle) + width / 2"
        },
        {
          "type": "formula",
          "as": "ymid",
          "expr": "(innerRadius + 20) * sin(datum.midAngle) + height / 2"
        },
        {
          "type": "formula",
          "as": "labelText",
          "expr": "labelField === '0' ? datum['Category'] : labelField === '1' ? datum['Total Sales Qty'] : datum['Category'] + '\\n ' + datum['Total Sales Qty']"
        }
      ]
    },
    {
      "name": "centerLabel",
      "source": "transformed",
      "transform": [
        {
          "type": "aggregate",
          "fields": [
            "Total Sales Qty"
          ],
          "ops": [
            "sum"
          ],
          "as": [
            "total"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "highlightColor",
      "type": "ordinal",
      "domain": {
        "data": "transformed",
        "field": "colorIndex"
      },
      "range": [
        "#1f77b4",
        "#ff7f0e",
        "#2ca02c",
        "#d62728",
        "#9467bd",
        "#8c564b"
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {
        "data": "transformed"
      },
      "encode": {
        "enter": {
          "fill": {
            "signal": "isValid(scale('highlightColor', datum.colorIndex)) ? scale('highlightColor', datum.colorIndex) : OtherColor"
          },
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          },
          "tooltip": {
            "signal": "{Category: datum['Category'], Value: datum['Total Sales Qty']}"
          }
        },
        "update": {
          "startAngle": {
            "field": "startAngle"
          },
          "endAngle": {
            "field": "endAngle"
          },
          "padAngle": {
            "signal": "padAngle"
          },
          "innerRadius": {
            "signal": "innerRadius"
          },
          "outerRadius": {
            "signal": "width / 2"
          },
          "cornerRadius": {
            "signal": "cornerRadius"
          },
          "stroke": {
            "signal": "SeparatorColor"
          },
          "strokeWidth": {
            "signal": "separator"
          },
          "fillOpacity": [
            {
              "test": "datum['__selected__'] == 'on'",
              "value": 1
            },
            {
              "value": 0.3
            }
          ]
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "centerLabel"
      },
      "encode": {
        "enter": {
          "x": {
            "signal": "width / 2"
          },
          "y": {
            "signal": "height / 2"
          },
          "text": {
            "field": "total"
          },
          "fontSize": {
            "signal": "CenterTextSize"
          },
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "middle"
          },
          "fill": {
            "signal": "CenterTextColor"
          }
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "transformed"
      },
      "encode": {
        "enter": {
          "x": {
            "field": "xmid"
          },
          "y": {
            "field": "ymid"
          },
          "text": {
            "field": "labelText"
          },
          "fill": {
            "signal": "labeltextcolor"
          },
          "fontSize": {
            "signal": "labelFontSize"
          },
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "middle"
          }
        }
      }
    }
  ]
}