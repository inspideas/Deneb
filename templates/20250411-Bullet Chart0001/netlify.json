{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/inspideas/BarChart/refs/heads/main/20250411-Bullet%20Chart0001.csv"
    },
    "width": 350,
    "height": {
      "step": 40
    },
    "background": "transparent",
    "transform": [
      {
        "window": [
          {
            "op": "rank",
            "as": "YearRank"
          }
        ],
        "sort": [
          {
            "field": "Year",
            "order": "descending"
          }
        ],
        "groupby": [
          "Category"
        ]
      },
      {
        "filter": "datum.YearRank <= 2"
      },
      {
        "calculate": "datum.YearRank == 1 ? 'TY' : 'LY'",
        "as": "Type"
      }
    ],
    "encoding": {
      "x": {
        "field": "Sales",
        "type": "quantitative",
        "title": null,
        "axis": {
          "grid": false,
          "ticks": false,
          "domain": false,
          "labels": false
        }
      },
      "y": {
        "field": "Category",
        "type": "ordinal",
        "title": null,
        "axis": {
          "grid": false,
          "ticks": false,
          "domain": false,
          "labelPadding": 15,
          "labelBaseline": "top",
          "labelColor": "#021859"
        }
      },
      "tooltip": [
        {
          "field": "Year"
        },
        {
          "field": "Category"
        },
        {
          "field": "Sales"
        },
        {
          "field": "% vs LY"
        }
      ]
    },
    "layer": [
      {
        "mark": {
          "type": "bar",
          "opacity": 0.3,
          "height": {
            "band": 0.7
          },
          "cornerRadiusEnd": 8
        },
        "encoding": {
          "x": {
            "field": "Sales",
            "type": "quantitative"
          },
          "y": {
            "field": "Category",
            "type": "ordinal"
          },
          "color": {
            "value": "#B0B0B0"
          }
        },
        "transform": [
          {
            "filter": "datum.Type == 'LY'"
          }
        ]
      },
      {
        "mark": {
          "type": "bar",
          "opacity": 1,
          "yOffset": 0,
          "height": {
            "band": 0.4
          },
          "cornerRadiusEnd": 4,
          "fill": {
            "x1": 0,
            "y1": 1,
            "x2": 1,
            "y2": 1,
            "gradient": "linear",
            "stops": [
              {
                "offset": 0,
                "color": "#09D5FA"
              },
              {
                "offset": 0.3,
                "color": "#536DA7"
              },
              {
                "offset": 1,
                "color": "#021859"
              }
            ]
          }
        },
        "encoding": {
          "x": {
            "field": "Sales",
            "type": "quantitative"
          },
          "y": {
            "field": "Category",
            "type": "ordinal"
          }
        },
        "transform": [
          {
            "filter": "datum.Type == 'TY'"
          }
        ]
      },
      {
        "mark": {
          "type": "tick",
          "tooltip": true,
          "thickness": 5,
          "cornerRadius": 5
        },
        "encoding": {
          "x": {
            "field": "Plan",
            "type": "quantitative"
          },
          "y": {
            "field": "Category",
            "type": "nominal"
          },
          "color": {
            "value": "#43D9BD"
          }
        },
        "transform": [
          {
            "filter": "datum.Type == 'TY'"
          }
        ]
      },
      {
        "transform": [
          {
            "filter": "datum.Type == 'TY'"
          },
          {
            "calculate": "datum['Plan'] - datum['Sales']",
            "as": "ToGoValue"
          },
          {
            "calculate": "'To go: ' + format(datum['ToGoValue'], '.2s')",
            "as": "ToGoText"
          }
        ],
        "mark": {
          "type": "text",
          "align": "left",
          "dx": 5,
          "dy": 0
        },
        "encoding": {
          "x": {
            "field": "Plan",
            "type": "quantitative"
          },
          "y": {
            "field": "Category",
            "type": "nominal"
          },
          "text": {
            "field": "ToGoText"
          },
          "color": {
            "value": "#43D9BD"
          }
        }
      }
    ],
    "config": {
      "view": {
        "stroke": null
      },
      "axis": {
        "grid": false,
        "ticks": false,
        "domain": true
      }
    }
  }